  $('#example1').on('click','.setaddress',function(){
    $('#example1 tr').removeClass('selected')
    tr = $(this).stairUp({level:2})
    tr.addClass('selected')
    id = tr.find('.clientsiteid').text()
    $('#select2state').val(tr.find('.state_id').text())
    $('#select2city').val(tr.find('.kota_id').text())
    $('#select2kecamatan').val(tr.find('.kecamatan_id').text()).trigger('change')
